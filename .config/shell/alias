# Sys alias
alias zconf="nvim ~/.config/zsh/.zshrc"
alias pacman="sudo pacman"
alias sys="sudo systemctl"
alias r="rm -rf"
alias copy="xclip -sel clipboard"

# My alias
alias fuck="sudo"
alias yeet-orphans="yay -Qtdq | yay -Rns -"
alias eat-orphans="yay -Qtdq | yay -Rsu -"
alias pwd="pwd && pwd | xclip -sel clipboard"
alias ls="exa -aG --color=always --icons --group-directories-first"
alias la="exa -a --color=always --icons --group-directories-first"
alias vi="nvim"

# git
alias dots='/usr/bin/git --git-dir=$HOME/.dots/ --work-tree=$HOME'

# youtube
alias ytdl="yt-dlp -f bestvideo+bestaudio -o '%(title)s.%(ext)s' --external-downloader aria2c"
alias ytadl="yt-dlp -x -f bestaudio -o '%(title)s.%(ext)s' --external-downloader aria2c"
alias ytvdl="yt-dlp -f best -o '%(title)s.%(ext)s' --external-downloader aria2c"
alias ytpdl="yt-dlp -f best -o '%(playlist_index)s. %(title)s.%(ext)s' --external-downloader aria2c"
