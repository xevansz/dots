# Sys alias
alias zconf="hx ~/.config/zsh/.zshrc"
alias sys="sudo systemctl"
alias rm="rm -rvf"
alias cp="cp -v"
alias mv="mv -v"
alias copy="xclip -sel clipboard"
alias mem="sudo ps_mem | tail"

# My alias
alias fuck="sudo"
# alias yeet-orphans="paru -Qtdq | paru -Rns -" It's not working well, no need to rm orphans freq
alias pwdc='pwd | xclip -sel clipboard'
alias ls="exa -alh --color=always --icons --group-directories-first"
alias hx="helix"
alias sysmain="bash ~/.config/scripts/sysmaintenance.sh"
alias td="hx ~/todo"
alias hist="helix ~/.local/state/zsh/history"

# git
dots() {
 /usr/bin/git --git-dir="$HOME/.dots/" --work-tree="$HOME" "$@"
}

# setup dots as an executable::~/bin/dots: add to path 
# ```bash
